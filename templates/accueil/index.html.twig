{% extends 'base.html.twig' %}

{% block title %}Hello Accueil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="jumbotron text-center">
            <h1 class="display-4">Bienvenue sur My Blog</h1>
            <p class="lead">DÃ©couvrez les derniers articles et insights.</p>
        </div>

        <div class="row">
            {% for article in articles %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.getTitre() }}</h5>
                            <p class="card-text">{{ article.getContenu()|slice(0, 100) ~ '...' }}</p>
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
