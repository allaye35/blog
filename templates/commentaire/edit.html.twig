{% extends 'base.html.twig' %}

{% block title %}Modifier un Commentaire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Modifier un Commentaire</h1>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_row(form.commentaire, {
                label: 'Commentaire',
                label_attr: {class: 'control-label col-sm-2'},
                attr: {class: 'form-control'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.article, {
                label: 'Article Associé',
                label_attr: {class: 'control-label col-sm-2'},
                attr: {class: 'form-control'}
            }) }}
        </div>
        <div class="d-flex justify-content-between">
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <button type="submit" class="btn btn-primary">Mettre à jour</button>
        </div>
        {{ form_end(form) }}
        <form method="post" action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" class="mt-4" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    </div>
{% endblock %}
