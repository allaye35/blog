{% extends 'base.html.twig' %}

{% block title %}Edit MotsCles{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier un mot-clé</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.mot) }}
            {{ form_widget(form.mot, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.mot) }}
        </div>

        <div class="form-group">
            {{ form_label(form.articles) }}
            {{ form_widget(form.articles, {'attr': {'class': 'form-control selectpicker', 'multiple': 'multiple', 'data-live-search': 'true'}}) }}
            {{ form_errors(form.articles) }}
        </div>

        <div class="form-group">
            <button class="btn btn-success">{{ is_edit ? 'Modifier' : 'Créer' }}</button>
            <a href="{{ path('app_mots_cles_index') }}" class="btn btn-secondary">Retour à la liste</a>
            {{ form_start(delete_form) }}
            <button class="btn btn-danger">Supprimer</button>
            {{ form_end(delete_form) }}
        </div>
        {{ form_end(form) }}
    </div>

    <script>
        $(document).ready(function() {
            $('.selectpicker').selectpicker();
        });
    </script>
{% endblock %}
