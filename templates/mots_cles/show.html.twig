{% extends 'base.html.twig' %}

{% block title %}MotsCles{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>MotsCles</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mots_cle.id }}</td>
            </tr>
            <tr>
                <th>Mot</th>
                <td>{{ mots_cle.mot }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('app_mots_cles_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
