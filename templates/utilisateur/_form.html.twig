{% extends 'base.html.twig' %}

{% block title %}{{ is_edit ? 'Modifier' : 'Créer' }} un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ is_edit ? 'Modifier' : 'Créer' }} un utilisateur</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>
        <button class="btn btn-success">{{ is_edit ? 'Modifier' : 'Créer' }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary mt-2">Retour à la liste</a>

        {% if is_edit %}
            <form method="post" action="{{ path('app_utilisateur_delete', {'id': utilisateur.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                <button class="btn btn-danger mt-2">Supprimer</button>
            </form>
        {% endif %}
    </div>
{% endblock %}
